<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:background="@drawable/walpaper3"
    tools:context=".tentang">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/label"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textSize="30dp"
            android:fontFamily="casual"
            android:text="TENTANG \n    APLIKASI"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:drawableRight="@drawable/tentang3"
            android:layout_marginRight="40dp"/>

        <TextView
            android:id="@+id/tentang"
            android:layout_below="@+id/label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="@string/tentang"
            android:textSize="25dp"
            android:fontFamily="sans-serif"
            android:layout_centerHorizontal="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/label2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/tentang"
            android:text="BIODATA"
            android:textSize="30dp"
            android:textStyle="bold"
            android:fontFamily="casual"
            android:layout_marginTop="20dp"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/me"
            android:layout_below="@id/label2"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:src="@drawable/me"
            />

        <TextView
            android:id="@+id/biodata"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_below="@id/me"
            android:gravity="center"
            android:text="@string/biodata"
            android:textSize="20dp"
            android:fontFamily="casual"/>
    </RelativeLayout>



</ScrollView>